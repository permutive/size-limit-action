{
  "name": "size-limit-action",
  "version": "1.5.1",
  "private": true,
  "description": "size-limit action",
  "main": "dist/index.js",
  "license": "ISC",
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "build": "ncc build src/main.ts -o dist",
    "size-build": "npm run build",
    "size": "npm run size-build && size-limit"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4500 ms"
    }
  ],
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.3",
    "@actions/github": "^5.1.1",
    "bytes": "^3.1.0",
    "has-yarn": "^2.1.0",
    "markdown-table": "^2.0.0"
  },
  "devDependencies": {
    "@size-limit/file": "^8.2.6",
    "@size-limit/time": "^4.3.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@typescript-eslint/parser": "^2.23.0",
    "@zeit/ncc": "^0.22.1",
    "eslint": "^8.43.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "size-limit": "^8.2.6",
    "ts-jest": "^29.1.0",
    "typescript": "^3.6.4"
  }
}
